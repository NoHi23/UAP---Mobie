<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iconFileType"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_file_pdf_24dp" /> <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/textViewDocumentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slide Chuong 1 - Gioi thieu.pdf"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/textViewDocumentInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF â€¢ 2.5 MB"
        android:textAppearance="?attr/textAppearanceCaption" />
</LinearLayout>

    <ImageView
        android:id="@+id/iconMoreOptions"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_vert_24dp"
        app:tint="@android:color/darker_gray" />

</LinearLayout>