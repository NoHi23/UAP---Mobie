<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"> <!-- Sử dụng padding bên trong LinearLayout -->

            <!-- Tiêu đề lớn của form -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Khu vực hiển thị thông tin -->
            <TextView
                android:id="@+id/tvLecturerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Mai Bùi Thanh"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_account_circle"
                android:drawablePadding="12dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvLecturerCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Mã GV: GV-SE011488"
                android:textSize="16sp"
                android:textColor="#777"
                android:layout_marginStart="44dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Email: maibt@lecturer.edu.vn"
                android:textSize="16sp"
                android:textColor="#777"
                android:layout_marginStart="44dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvMajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Ngành: Kỹ sư phần mềm"
                android:textSize="16sp"
                android:textColor="#777"
                android:layout_marginStart="44dp"
                android:layout_marginBottom="8dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE"
                android:layout_marginVertical="20dp"/>

            <!-- Tiêu đề phần cập nhật -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cập nhật thông tin cơ bản"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Input Địa chỉ (Material Outlined Box) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Địa chỉ"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Input Số điện thoại (Material Outlined Box) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số điện thoại"
                    android:inputType="phone"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Input Ngày sinh (Material Outlined Box) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ngày sinh (yyyy-MM-dd)"
                    android:inputType="date"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Spinner Giới tính -->
            <!-- Thêm label cho Spinner để rõ ràng hơn -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"/>
            <Spinner
                android:id="@+id/spGender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp" />

            <!-- Nút Lưu (Material Elevated Button) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lưu thay đổi"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:textSize="18sp"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>