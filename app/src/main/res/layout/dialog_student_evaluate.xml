<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:text="Đánh giá lớp học"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvClassInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAE101-SP26-3 • GV: ..."
        android:layout_marginTop="4dp"
        android:textColor="#666" />

    <!-- Tiêu chí -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiêu chí"
        android:layout_marginTop="14dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtCriteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="VD: Phương pháp giảng dạy, Thái độ, Cơ sở vật chất..."
        android:inputType="text" />

    <!-- Nhận xét -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận xét"
        android:layout_marginTop="14dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtComment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:hint="Viết nhận xét của bạn..."
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:padding="8dp"
            android:textColor="#666" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi" />
    </LinearLayout>

</LinearLayout>
