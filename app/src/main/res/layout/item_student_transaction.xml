<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- dòng 1: mã + trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mã: 07180458_df5b71"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status_chip"
                android:paddingHorizontal="10dp"
                android:paddingVertical="3dp"
                android:text="Pending"
                android:textSize="12sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- dòng 2: kỳ + phương thức -->
        <TextView
            android:id="@+id/tvSemester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Kỳ: SP26"
            android:textSize="13sp"
            android:textColor="#555" />

        <!-- dòng 3: số tiền -->
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="10.000.000 đ"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- dòng 4: method + time -->
        <TextView
            android:id="@+id/tvMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="VNPAY"
            android:textSize="13sp"
            android:textColor="#666" />

        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="07/11/2025 11:04"
            android:textSize="12sp"
            android:textColor="#999" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
